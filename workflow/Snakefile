import os
import json

# üîπ Ask the user for the external project folder where data will be stored
PROJECT_FOLDER = input("üìÇ Enter the full path of your project folder (e.g., /Users/ecrespo/Desktop/my_project): ").strip()

# ‚úÖ Ensure the project folder exists and set up structure
if not os.path.exists(PROJECT_FOLDER):
    os.makedirs(PROJECT_FOLDER, exist_ok=True)

# ‚úÖ Define the correct path for `config.json` inside the external project folder
CONFIG_FILE = os.path.join(PROJECT_FOLDER, "config.json")

# üîç Print debug information
print(f"üü¢ DEBUG INFO:")
print(f"  - External Project Folder: {PROJECT_FOLDER}")
print(f"  - Config file path: {CONFIG_FILE}")

# ‚úÖ Snakemake Rule: Ensure `config.json` is created inside the external project folder
rule setup_project:
    output: CONFIG_FILE
    run:
        import json
        import os
        config_data = {
            "project_root": PROJECT_FOLDER,
            "status": "initialized"
        }
        subdirs = ["raw", "metadata", "processed", "analysis", "figures"]
        for sub in subdirs:
            os.makedirs(os.path.join(PROJECT_FOLDER, sub), exist_ok=True)
        with open(CONFIG_FILE, "w") as f:
            json.dump(config_data, f, indent=4)
        print(f"‚úÖ Project initialized at: {PROJECT_FOLDER}")
        print(f"‚úÖ Config file created at: {CONFIG_FILE}")

rule all:
    input:
        CONFIG_FILE  # ‚úÖ Ensures project folder is set up before running any other rules